menu  "Blecon Sensor (Default)"
DT_CHOSEN_BLECON_LED_SAMPLING := blecon,led-sampling
config LED_SAMPLING
    bool "Enable LED pattern on every sample"
    default y if $(dt_chosen_enabled,$(DT_CHOSEN_BLECON_LED_SAMPLING))
config SAMPLING_PERIOD_SEC
    int "Sensors sampling period (seconds)"
    default 60
config REPORTING_PERIOD_SEC
    int "Reporting period (seconds)"
    default 300
config LEDS_ENABLED_DURATION_MIN
    int "How long shoud LEDs be enabled for after button press (minutes)"
    default 720
config ALERT_TEMPERATURE_THRESHOLD_LOW
    int "Temperature is too low if below this threshold"
    default 15
config ALERT_TEMPERATURE_THRESHOLD_HIGH
    int "Temperature is too high if below this threshold"
    default 30
config ALERT_HUMIDITY_THRESHOLD_LOW
    int "Humidity is too low if below this threshold"
    default 30
config ALERT_HUMIDITY_THRESHOLD_HIGH
    int "Humidity is too high if below this threshold"
    default 70
endmenu

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu